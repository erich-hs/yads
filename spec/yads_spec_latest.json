{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YADS Spec",
  "description": "A schema for defining data structures in YADS.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The fully qualified name of the table."
    },
    "version": {
      "type": "string",
      "description": "The version of the spec."
    },
    "description": {
      "type": "string",
      "description": "A description of the table."
    },
    "options": {
      "type": "object",
      "properties": {
        "if_not_exists": {
          "type": "boolean"
        },
        "or_replace": {
          "type": "boolean"
        }
      }
    },
    "properties": {
      "type": "object",
      "properties": {
        "partitioned_by": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "column": {
                "type": "string"
              },
              "transform": {
                "type": "string"
              }
            },
            "required": ["column"]
          }
        },
        "location": {
          "type": "string"
        },
        "table_type": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "write_compression": {
          "type": "string"
        }
      }
    },
    "table_constraints": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/table_constraint"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "retention_days": {
          "type": "integer"
        },
        "granularity": {
          "type": "string"
        }
      }
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/named_column"
      }
    }
  },
  "required": ["name", "version", "description", "columns"],
  "definitions": {
    "column": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "constraints": {
          "$ref": "#/definitions/constraints"
        },
        "params": {
          "type": "object"
        },
        "element": {
          "$ref": "#/definitions/column"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/named_column"
          }
        },
        "key": {
          "$ref": "#/definitions/column"
        },
        "value": {
          "$ref": "#/definitions/column"
        },
        "metadata": {
            "type": "object"
        }
      },
      "required": ["type"]
    },
    "named_column": {
        "allOf": [
            { "$ref": "#/definitions/column" },
            { "required": ["name"] }
        ]
    },
    "table_constraint": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["primary_key"]
        },
        "name": {
          "type": "string"
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "columns"]
    },
    "constraints": {
      "type": "object",
      "properties": {
        "not_null": {
          "type": "boolean"
        },
        "primary_key": {
          "type": "boolean"
        },
        "default": {}
      }
    }
  }
} 